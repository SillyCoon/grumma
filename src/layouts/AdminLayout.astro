---
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={`Admin - ${title}`}>
  <div class="flex gap-4 min-h-screen">
    <!-- Sidebar Navigation -->
    <aside class="w-64 bg-slate-100 p-6 border-r">
      <nav class="space-y-2">
        <a
          href="/admin"
          class="block px-4 py-2 rounded hover:bg-slate-200 transition text-xs font-medium"
          >Dashboard</a
        >
        <a
          href="/admin/grammar"
          class="block px-4 py-2 rounded hover:bg-slate-200 transition text-xs font-medium"
          >Grammar Points</a
        >
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8">
      <slot />
    </main>
  </div>
</Layout>
